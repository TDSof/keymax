
@{
    var listInvd = (List<ProductWithType>)ViewData["listInvd"];
    var inv = (invoices)ViewData["invoice"];
    Func f = new Func();
    int total = 0;
}

<!-- Order Success Section Start -->
<section class="pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="success-icon">
                    <div class="main-container">
                        <div class="check-container">
                            <div class="check-background">
                                <svg viewBox="0 0 65 51" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M7 25L27.3077 44L58.5 7" stroke="white" stroke-width="13"
                                          stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </div>
                            <div class="check-shadow"></div>
                        </div>
                    </div>

                    <div class="success-contain">
                        <h4>Đặt hàng thành công</h4>
                        <h5 class="font-light">Thanh toán được xử lý thành công và đơn đặt hàng của bạn đang được tiến hành</h5>
                        <h6 class="font-light">Transaction ID: @inv.invoice_id</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Order Success Section End -->
<!-- Oder Details Section Start -->
<section class="section-b-space cart-section order-details-table">
    <div class="container">
        <div class="title title1 title-effect mb-1 title-left">
            <h2 class="mb-3">Chi tiết đơn hàng</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="col-sm-12 table-responsive">
                    <table class="table cart-table table-borderless">
                        <tbody>
                            @foreach (var item in listInvd)
                            {
                                total += (int)item.product_quantity * item.product_price;
                                <tr class="table-order">
                                    <td>
                                        <a href="javascript:void(0)">
                                            <img src="@item.product_img" class="img-fluid blur-up lazyload" />
                                        </a>
                                    </td>
                                    <td>
                                        <p>Tên sản phẩm</p>
                                        <h5>@item.product_name</h5>
                                    </td>
                                    <td>
                                        <p>Số lượng</p>
                                        <h5>@item.product_quantity</h5>
                                    </td>
                                    <td>
                                        <p>Giá</p>
                                        <h5>@item.product_price</h5>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            @*<tr class="table-order">
                                <td colspan="3">
                                    <h5 class="font-light">Tạm tính :</h5>
                                </td>
                                <td>
                                    <h4>$55.00</h4>
                                </td>
                            </tr>*@
                            <tr class="table-order">
                                <td colspan="3">
                                    <h4 class="theme-color fw-bold">Tổng cộng:</h4>
                                </td>
                                <td>
                                    <h4 class="theme-color fw-bold">@total</h4>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="order-success">
                    <div class="row g-4">
                        <div class="col-sm-6">
                            <h4>summery</h4>
                            <ul class="order-details">
                                <li>Mã đơn hàng: @inv.invoice_id</li>
                                <li>Ngày đặt: @inv.invoice_created_at.ToString()</li>
                                <li>Tổng đơn: @inv.invoice_subtotal</li>
                            </ul>
                        </div>

                        <div class="col-sm-6">
                            <h4>Địa chỉ giao hàng</h4>
                            <ul class="order-details">
                                <li>@inv.invoice_user_fullname</li>
                                <li>@inv.invoice_user_phone_number</li>
                                <li>@inv.invoice_user_address</li>
                            </ul>
                        </div>

                        <div class="col-12">
                            <div class="payment-mode">
                                <h4>Phương thức thanh toán</h4>
                                <p>Cash on delivery (COD)</p>
                            </div>
                        </div>

                        @*<div class="col-md-12">
                            <div class="delivery-sec">
                                <h3>expected date of delivery: <span>october 22, 2018</span></h3>
                                <a href="order-tracking.html">track order</a>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Order Details Section End -->