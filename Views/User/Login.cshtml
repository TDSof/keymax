
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Voxo">
    <meta name="keywords" content="Voxo">
    <meta name="author" content="Voxo">
    <link rel="icon" href="~/Content/images/favicon/2.png" type="image/x-icon" />
    <title>Log In</title>

    <!--Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- bootstrap css -->
    <link id="rtl-link" rel="stylesheet" type="text/css" href="~/Content/css/vendors/bootstrap.css">

    <!-- font-awesome css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/vendors/font-awesome.css">

    <!-- feather icon css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/vendors/feather-icon.css">

    <!-- animation css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/vendors/animate.css">

    <!-- slick css -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/vendors/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/vendors/slick/slick-theme.css">

    <!-- Theme css -->
    <link id="color-link" rel="stylesheet" type="text/css" href="~/Content/css/demo2.css">

</head>

<body class="theme-color2 light ltr">

    <!-- Log In Section Start -->
    <div class="login-section">
        <div class="materialContainer">
            <div class="box">
                <form method="post">
                    <div class="login-title">
                        <h2>Đăng nhập</h2>
                    </div>
                    <div class="input">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" required />
                        <span class="spin"></span>
                    </div>
                    <div class="input">
                        <label for="pass">Mật khẩu</label>
                        <input type="password" name="pass" id="pass" required />
                        <span class="spin"></span>
                    </div>
                    <a href="#" class="pass-forgot">Quên mmật khẩu?</a>
                    <div class="button login">
                        <button type="submit">
                            <span>Đăng Nhập</span>
                            <i class="fa fa-check"></i>
                        </button>
                    </div>
                    <p class="sign-category">
                        <span>Hoặc đăng nhập nhanh với</span>
                    </p>
                    <div class="row gx-md-3 gy-3">
                        <div class="col-md-6">
                            <a href="//fb.com" target="_blank">
                                <div class="social-media fb-media">
                                    <img src="~/Content/images/inner-page/facebook.png"
                                         class="img-fluid blur-up lazyload" />
                                    <h6>Facebook</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="//google.com" target="_blank">
                                <div class="social-media google-media">
                                    <img src="~/Content/images/inner-page/google.png"
                                         class="img-fluid blur-up lazyload" />
                                    <h6>Google</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                    <p>Chưa có tài khoản? <a href="#" class="theme-color">Đăng ký ngay</a></p>
                </form>
            </div>
        </div>
    </div>
    <!-- Log In Section End -->

    <div class="bg-overlay"></div>

    <!-- latest jquery-->
    <script src="~/Content/js/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap js-->
    <script src="~/Content/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- feather icon js-->
    <script src="~/Content/js/feather/feather.min.js"></script>

    <!-- lazyload js-->
    <script src="~/Content/js/lazysizes.min.js"></script>

    <!-- Slick js-->
    <script src="~/Content/js/slick/slick.js"></script>
    <script src="~/Content/js/slick/slick-animation.min.js"></script>
    <script src="~/Content/js/slick/custom_slick.js"></script>

    <!-- Notify js-->
    <script src="~/Content/js/bootstrap/bootstrap-notify.min.js"></script>

    <!-- script js -->
    <script src="~/Content/js/script.js"></script>
    <script src="~/Content/js/home-script.js"></script>

</body>

</html>