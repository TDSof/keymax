
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutSign.cshtml";
}

@if (ViewData["msg"] != null) {
    <script>alert("@Html.Raw(ViewData["msg"])");</script>
}
<!-- Log In Section Start -->
<div class="login-section">
    <div class="materialContainer">
        <div class="box">
            <form method="post" action="">
                <div class="login-title">
                    <h2>Đăng nhập</h2>
                </div>
                <div class="input">
                    <label for="email">Email</label>
                    <input type="email" name="user_email" id="email" required />
                    <span class="spin"></span>
                </div>
                <div class="input">
                    <label for="pass">Mật khẩu</label>
                    <input type="password" name="user_password" id="pass" required />
                    <span class="spin"></span>
                </div>
                <a href="#" class="pass-forgot">Quên mmật khẩu?</a>
                <div class="button login">
                    <button type="submit">
                        <span>Đăng Nhập</span>
                        <i class="fa fa-check"></i>
                    </button>
                </div>
                <p class="sign-category">
                    <span>Hoặc đăng nhập nhanh với</span>
                </p>
                <div class="row gx-md-3 gy-3">
                    <div class="col-md-6">
                        <a href="//fb.com" target="_blank">
                            <div class="social-media fb-media">
                                <img src="~/Content/images/inner-page/facebook.png"
                                     class="img-fluid blur-up lazyload" />
                                <h6>Facebook</h6>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="//google.com" target="_blank">
                            <div class="social-media google-media">
                                <img src="~/Content/images/inner-page/google.png"
                                     class="img-fluid blur-up lazyload" />
                                <h6>Google</h6>
                            </div>
                        </a>
                    </div>
                </div>
                <p>Chưa có tài khoản? <a href="~/User/Register" class="theme-color">Đăng ký ngay</a></p>
            </form>
        </div>
    </div>
</div>
<!-- Log In Section End -->